<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.com_jc_tree.dao.StepMapper">
    <resultMap id="StepInfo" type="com.example.com_jc_tree.entity.Step">
        <id property="id" column="id"/>
        <result property="user_id" column="userId"/>
        <result property="date" column="date"/>
        <result property="step" column="step"/>
    </resultMap>

    <insert id="insertStep" parameterType="com.example.com_jc_tree.entity.Step">
        insert into step (user_id, date, step)
        values( #{userId}, date(now()), #{step})
    </insert>
    <select id="selectStep" parameterType="Integer" resultMap="StepInfo">
        select * from step
        where user_id = #{userId} and date = date(now())
    </select>


    <update id="updateStep" parameterType="com.example.com_jc_tree.entity.Step">
        update step set step = #{step}
        where user_id = #{userId} and date = date(now())
    </update>
</mapper>
