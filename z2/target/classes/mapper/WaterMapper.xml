<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.com_jc_tree.dao.WaterMapper">
    <resultMap id="WaterInfo" type="com.example.com_jc_tree.entity.Water">
        <id property="id" column="id"/>
        <result property="user_id" column="userId"/>
        <result property="tree_id" column="treeId"/>
        <result property="time" column="time"/>
        <result property="water" column="water"/>
    </resultMap>

    <insert id="insertWater" parameterType="com.example.com_jc_tree.entity.Water">
        insert into water (user_id, tree_id, time, water)
        values( #{userId}, #{treeId}, #{time}, #{water})
    </insert>
    <select id="getWater" resultMap="WaterInfo">
        select * from water
    </select>

    <select id="selectWater" parameterType="com.example.com_jc_tree.entity.Water" resultMap="WaterInfo">
        select * from water
        where user_id = #{userId} and date(time) = date(#{now})
    </select>
</mapper>
