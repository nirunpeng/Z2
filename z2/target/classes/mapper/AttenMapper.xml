<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.com_jc_tree.dao.AttenMapper">
    <resultMap id="AttenInfo" type="com.example.com_jc_tree.entity.Atten">
        <id property="id" column="id"/>
        <result property="user_id" column="userId"/>
        <result property="date" column="date"/>
    </resultMap>

    <insert id="insertAtten" parameterType="com.example.com_jc_tree.entity.Atten">
        insert into atten (user_id, date)
        values( #{userId}, #{date})
    </insert>
    <select id="selectAtten" parameterType="com.example.com_jc_tree.entity.Atten" resultMap="AttenInfo">
        select * from atten
        where user_id = #{userId} and date(date) = date(#{time})
    </select>


</mapper>
